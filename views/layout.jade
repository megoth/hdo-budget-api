doctype html
html(lang="en")
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.container
    header
      h1= title
      nav.navbar.navbar-default(role="navigation")
        ul.nav.navbar-nav
          li(class= domain=='frontpage' ? ['active'] : [])
            a(href="/") Frontpage
          li(class= domain=='budgets' ? ['active'] : [])
            a(href="/budgets") Budgets
          if (isAuthenticated)
            li(class= domain=='admin' ? ['active'] : [])
              a(href="/admin") Admin
            li
              a(href="/logout") Log out
          else
            li
              a(href="/auth/google") Log in
    div(role="main")
      block mainContent
  </body>
</html>